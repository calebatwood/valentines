<h3>Deliver your Valentine message</h3>
<br>

<%= form_for(@valentine, html: {class: "form-horizontal"}) do |f| %>


<form class="form-horizontal">
  <div class="form-group">
      <%= f.label :name, class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :message, class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.text_field :message, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-4">
      <%= f.submit class: "btn btn-danger"%>
      <%= link_to "Cancel", valentines_path, class: "btn btn-default"%>
    </div>
  </div>
</form>

<% end %>
